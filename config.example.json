{
    "listen": ":443",

    "ssl": true,

    "ssl_certificate": {
        "crt": "/full/path/to/certificate/file.crt",
        "key": "/full/path/to/key/file.key"
    },

    "basic_authenticate": true,

    "authentication": {
        "user": "example",
        "password": "example"
    },

    "libraries": [
        "/path/to/my/files",
        "/some/more/files/can/be/found/here"
    ],

    "library_scan": {
        "files_per_operation": 1500,
        "sleep_after_operation": "15ms",
        "initial_wait_duration": "1s"
    }
}
